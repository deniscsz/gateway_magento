<?xml version="1.0" encoding="UTF-8"?>
<config>
  <sections>
    <payment>
      <groups>
        <cielobuyloja translate="label" module="cielobuyloja">
          <label>Locaweb Cielo Buy Page Loja</label>
          <sort_order>670</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>0</show_in_store>
          <fields>
            <active translate="label">
              <label>Ativado no Magento</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </active>

            <title translate="label">
              <label>Título</label>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </title>

            <cctypes translate="label">
              <label>Cartões de Crédito</label>
              <frontend_type>multiselect</frontend_type>
              <source_model>locaweb_CieloBuyLoja_config_cctype</source_model>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </cctypes>

            <useccv translate="label">
              <label>Pedir o Código de Segurança do Cartão</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </useccv>

            <token translate="Token">
              <label>Token</label>
              <frontend_type>text</frontend_type>
              <sort_order>6</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
              <validate>required-entry</validate>
            </token>

            <sandbox_environment translate="Sandbox Environment">
              <label>Ambiente de Testes(Sandbox)</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>7</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </sandbox_environment>

            <parcel_number translate='label'>
              <label>Número de Parcelas</label>
              <frontend_type>text</frontend_type>
              <sort_order>8</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <show_in_default>1</show_in_default>
              <validate>validate-number</validate>
            </parcel_number>

            <parcel_type translate='label'>
              <label>Tipo da Operação do Pagamento</label>
              <frontend_type>select</frontend_type>
              <source_model>locaweb_abstract_config_parceltype</source_model>
              <sort_order>7</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </parcel_type>
			
			<valormin translate="label">
			  <label>Valor Mínimo da Parcela</label>
			  <frontend_type>text</frontend_type>
			  <sort_order>20</sort_order>
			  <show_in_default>1</show_in_default>
			  <show_in_website>1</show_in_website>
			  <show_in_store>1</show_in_store>
		    </valormin>
			
		    <nummax translate="label">
			  <label>Número Máximo de Parcelas</label>
			  <frontend_type>text</frontend_type>
			  <sort_order>18</sort_order>
			  <show_in_default>1</show_in_default>
			  <show_in_website>1</show_in_website>
			  <show_in_store>1</show_in_store>
		    </nummax>
			
			<nummaxnojuros translate="label">
			  <label>Número Máximo de Parcelas Sem Juros</label>
			  <frontend_type>text</frontend_type>
			  <sort_order>19</sort_order>
			  <show_in_default>1</show_in_default>
			  <show_in_website>1</show_in_website>
			  <show_in_store>1</show_in_store>
		    </nummax>
			
		    <juros translate="label">
  			  <label>Juros das parcelas</label>
			  <frontend_type>text</frontend_type>
			  <sort_order>25</sort_order>
			  <show_in_default>1</show_in_default>
			  <show_in_website>1</show_in_website>
			  <show_in_store>1</show_in_store>
			  <comment>Deixe vazio para desabilitar os juros sobre parcelas. Utilize ponto para número decimal.</comment>
		    </juros>

          </fields>
        </cielobuyloja>
      </groups>
    </payment>
  </sections>
</config>
